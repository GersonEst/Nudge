{
  "manifest_version": 3,
  "name": "Think First",
  "version": "1.0.0",
  "description": "Encourages critical thinking before using AI - take 5 minutes to reflect first",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "*://chatgpt.com/*",
      "*://chat.openai.com/*"
    ],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_start"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Think First"
  }
}
